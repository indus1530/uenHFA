<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionH13Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.sections.SectionH13Activity">

        <LinearLayout
            android:id="@+id/GrpNameSectionH13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- h13  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h13" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h1301  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh1301"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h1301" />

                    <RadioGroup
                        android:id="@+id/h1301"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h1301a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1301a" />

                        <RadioButton
                            android:id="@+id/h1301b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1301b" />

                        <RadioButton
                            android:id="@+id/h1301c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1301c" />

                        <RadioButton
                            android:id="@+id/h1301d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1301d" />

                        <RadioButton
                            android:id="@+id/h1301e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1301e" />

                        <RadioButton
                            android:id="@+id/h1301f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1301f" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h1302  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh1302"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h1302" />

                    <RadioGroup
                        android:id="@+id/h1302"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h1302a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1302a" />

                        <RadioButton
                            android:id="@+id/h1302b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1302b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h1303  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh1303"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h1303" />

                    <RadioGroup
                        android:id="@+id/h1303"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h1303a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1303a" />

                        <RadioButton
                            android:id="@+id/h1303b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1303b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>