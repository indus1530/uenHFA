<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionF3Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.sections.SectionF3Activity">

        <LinearLayout
            android:id="@+id/GrpName"
            style="@style/vlinearlayout">

            <!-- f03  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVf03"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/f03" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- f0301  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVf0301"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/f0301" />

                    <RadioGroup
                        android:id="@+id/f0301"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/f0301a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f0301a" />

                        <RadioButton
                            android:id="@+id/f0301b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f0301b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/fldGrpSecf301"
                style="@style/vlinearlayout"
                android:visibility='@{f0301b.checked ? View.GONE : View.VISIBLE}'>

                <!-- f0301aa  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVf0301aa"
                    style="@style/cardView">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/f0301aa" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- f0301aaa0a  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVf0301aaa0a"
                    style="@style/cardView">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/f0301aaa0a" />

                        <RadioGroup
                            android:id="@+id/f0301aaa0a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/f0301aaa0ay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0301aaa0ay" />

                            <RadioButton
                                android:id="@+id/f0301aaa0an"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0301aaa0an" />

                            <RadioButton
                                android:id="@+id/f0301aaa0aq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0301aaa0aq" />

                            <EditText
                                android:id="@+id/f0301aaa0aqx"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginBottom="12dp"
                                android:hint="@string/f0301aaa0aq"
                                android:tag="f0301aaa0aq"
                                android:text='@{f0301aaa0aq.checked? f0301aaa0aqx.getText().toString() : ""}'
                                android:visibility='@{f0301aaa0aq.checked? View.VISIBLE : View.GONE}' />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- f0301aaa0f  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVf0301aaa0f"
                    style="@style/cardView"
                    android:visibility='@{f0301aaa0an.checked ? View.GONE : View.VISIBLE}'>

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/f0301aaa0f" />

                        <RadioGroup
                            android:id="@+id/f0301aaa0f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/f0301aaa0fy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0301aaa0fy" />

                            <RadioButton
                                android:id="@+id/f0301aaa0fn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0301aaa0fn" />

                            <RadioButton
                                android:id="@+id/f0301aaa0fq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0301aaa0fq" />

                            <EditText
                                android:id="@+id/f0301aaa0fqx"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginBottom="12dp"
                                android:hint="@string/f0301aaa0fq"
                                android:tag="f0301aaa0fq"
                                android:text='@{f0301aaa0fq.checked? f0301aaa0fqx.getText().toString() : ""}'
                                android:visibility='@{f0301aaa0fq.checked? View.VISIBLE : View.GONE}' />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <!-- f0302  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVf0302"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/f0302" />

                    <RadioGroup
                        android:id="@+id/f0302"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/f0302a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f0302a" />

                        <RadioButton
                            android:id="@+id/f0302b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f0302b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/fldGrpSecf302"
                style="@style/vlinearlayout"
                android:visibility='@{f0302b.checked ? View.GONE : View.VISIBLE}'>

                <!-- f0302aa  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVf0302aa"
                    style="@style/cardView">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/f0302aa" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- f0302aaa0a  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVf0302aaa0a"
                    style="@style/cardView">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/f0302aaa0a" />

                        <RadioGroup
                            android:id="@+id/f0302aaa0a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/f0302aaa0ay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0302aaa0ay" />

                            <RadioButton
                                android:id="@+id/f0302aaa0an"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0302aaa0an" />

                            <RadioButton
                                android:id="@+id/f0302aaa0aq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0302aaa0aq" />

                            <EditText
                                android:id="@+id/f0302aaa0aqx"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginBottom="12dp"
                                android:hint="@string/f0302aaa0aq"
                                android:tag="f0302aaa0aq"
                                android:text='@{f0302aaa0aq.checked? f0302aaa0aqx.getText().toString() : ""}'
                                android:visibility='@{f0302aaa0aq.checked? View.VISIBLE : View.GONE}' />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- f0302aaa0f  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVf0302aaa0f"
                    style="@style/cardView">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/f0302aaa0f" />

                        <RadioGroup
                            android:id="@+id/f0302aaa0f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/f0302aaa0fy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0302aaa0fy" />

                            <RadioButton
                                android:id="@+id/f0302aaa0fn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0302aaa0fn" />

                            <RadioButton
                                android:id="@+id/f0302aaa0fq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/f0302aaa0fq" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>