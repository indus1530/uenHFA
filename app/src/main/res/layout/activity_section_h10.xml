<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionH10Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.sections.SectionH10Activity">

        <LinearLayout
            android:id="@+id/GrpNameSectionH10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- h10  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h10" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h1001  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh1001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h1001" />

                    <RadioGroup
                        android:id="@+id/h1001"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h1001a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1001a" />

                        <RadioButton
                            android:id="@+id/h1001b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1001b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h1002  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh1002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h1002" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h1002a  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh1002a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h1002a" />

                    <RadioGroup
                        android:id="@+id/h1002a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h1002aa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1002aa" />

                        <RadioButton
                            android:id="@+id/h1002ab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1002ab" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h1002b  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh1002b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h1002b" />

                    <RadioGroup
                        android:id="@+id/h1002b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h1002ba"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1002ba" />

                        <RadioButton
                            android:id="@+id/h1002bb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1002bb" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>