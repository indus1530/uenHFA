<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionH10Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/GrpName"
            style="@style/vlinearlayout">

            <!-- h10  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh10"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/textviewh"
                        android:text="@string/h10" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- h1001  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh1001"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h1001" />

                    <RadioGroup
                        android:id="@+id/h1001"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h1001a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1001a" />

                        <RadioButton
                            android:id="@+id/h1001b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h1001b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/fldGrpSech1001"
                style="@style/vlinearlayout"
                android:visibility='@{h1001b.checked? View.GONE : View.VISIBLE}'>

                <!-- h1002  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh1002"
                    style="@style/cardView">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/h1002" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- h1002a  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh1002a"
                    style="@style/cardView">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/h1002a" />

                        <RadioGroup
                            android:id="@+id/h1002a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/h1002aa"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h1002aa" />

                            <RadioButton
                                android:id="@+id/h1002ab"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h1002ab" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- h1002b  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVh1002b"
                    style="@style/cardView">

                    <LinearLayout style="@style/vlinearlayout">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="@string/h1002b" />

                        <RadioGroup
                            android:id="@+id/h1002b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/h1002ba"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h1002ba" />

                            <RadioButton
                                android:id="@+id/h1002bb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/h1002bb" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <!--EndButton LinearLayout-->
            <LinearLayout
                style="@style/hlinearlayout"
                android:layout_gravity="end"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/btnEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="End" />

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/btnNext"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />

            </LinearLayout>
            <!--EndButton LinearLayout-->


        </LinearLayout>

    </ScrollView>

</layout>