<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionK6Activity" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/GrpName"
            style="@style/vlinearlayout">


            <!-- k006  SectionTitle   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvk006"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/k006" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- k00611  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvk00611"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_k00611"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_k00611"
                            android:text="@string/k00611" />

                        <TextView
                            android:id="@+id/q_k00611"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_k00611"
                            android:layout_alignBottom="@id/qtxt_k00611"
                            android:text="@string/Q_k00611" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/k00611"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/textviewh"
                            android:text="AVAILABLE" />

                        <RadioButton
                            android:id="@+id/k00611a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k00611a" />

                        <RadioButton
                            android:id="@+id/k00611b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k00611b" />

                        <RadioButton
                            android:id="@+id/k00611c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k00611c" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/k00611q"
                            style="@style/EditTextNum"
                            android:hint="@string/k00611q"
                            android:maxLength="6"
                            android:tag="k00611a"
                            android:text='@{k00611a.checked || k00611b.checked ? k00611q.getText().toString() : "" }'
                            android:visibility='@{k00611a.checked || k00611b.checked ? View.VISIBLE : View.GONE }'
                            app:maxValue="999999"
                            app:minValue="1"
                            app:type="range" />

                    </RadioGroup>

                    <LinearLayout
                        style="@style/vlinearlayout"
                        android:visibility='@{k00611a.checked || k00611b.checked ? View.VISIBLE : View.GONE }'>

                        <TextView
                            style="@style/textviewh"
                            android:text="FUNCTIONAL" />

                        <RadioGroup
                            android:id="@+id/k00612"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/k00612a"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/k00612a" />

                            <RadioButton
                                android:id="@+id/k00612b"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/k00612b" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/k00612q"
                                style="@style/EditTextNum"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:enabled='@{k00612a.checked ? true : false }'
                                android:hint="@string/k00612q"
                                android:maxLength="6"
                                android:tag="k00612a"
                                android:text='@{k00612a.checked ? k00612q.getText().toString() : "" }'
                                app:maxValue="999999"
                                app:minValue="1"
                                app:type="range" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>




            <!--EndButton LinearLayout-->
            <LinearLayout
                style="@style/hlinearlayout"
                android:layout_gravity="end"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/btnEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="End" />

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/btnNext"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />

            </LinearLayout>
            <!--EndButton LinearLayout-->

        </LinearLayout>


    </ScrollView>

</layout>