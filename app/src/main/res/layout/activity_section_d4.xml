                        <TextView
                            android:id="@+id/q_d0401"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_d0401"
                            android:layout_alignBottom="@id/qtxt_d0401"
                            android:text="@string/Q_d0401" />

                    </RelativeLayout>


                    <RadioGroup
                        android:id="@+id/d0401"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/d0401a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0401a" />

