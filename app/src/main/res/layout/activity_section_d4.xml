<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionD4Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.sections.SectionD4Activity">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- d04  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d04" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- d0401  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd0401"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d0401" />

                    <RadioGroup
                        android:id="@+id/d0401"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/d0401a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0401a" />

                        <RadioButton
                            android:id="@+id/d0401b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0401b" />

                        <RadioButton
                            android:id="@+id/d0401c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0401c" />

                        <RadioButton
                            android:id="@+id/d0401d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0401d" />

                        <RadioButton
                            android:id="@+id/d0401e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0401e" />

                        <RadioButton
                            android:id="@+id/d0401f"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0401f" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- d0402  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd0402"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d0402" />

                    <RadioGroup
                        android:id="@+id/d0402"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/d0402a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0402a" />

                        <RadioButton
                            android:id="@+id/d0402b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0402b" />

                        <RadioButton
                            android:id="@+id/d0402c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0402c" />

                        <RadioButton
                            android:id="@+id/d0402d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0402d" />

                        <RadioButton
                            android:id="@+id/d0402e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0402e" />

                        <RadioButton
                            android:id="@+id/d04025"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d04025" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- d0403  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd0403"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d0403" />

                    <RadioGroup
                        android:id="@+id/d0403"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/d0403a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0403a" />

                        <RadioButton
                            android:id="@+id/d0403b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0403b" />

                        <RadioButton
                            android:id="@+id/d0403c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0403c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- d0404  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd0404"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d0404" />

                    <RadioGroup
                        android:id="@+id/d0404"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/d0404a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0404a" />

                        <RadioButton
                            android:id="@+id/d0404b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0404b" />

                        <RadioButton
                            android:id="@+id/d0404c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0404c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>