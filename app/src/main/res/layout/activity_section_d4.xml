            <!-- d04  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd04"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/d04" />

