<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <data>
        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionK2Activity" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/GrpNameSectionK2"
            style="@style/vlinearlayout">


            <!-- k002  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk02"
                style="@style/cardView">

                <LinearLayout style="@style/cardView">

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/k002" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- k0021  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk0021"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_k0021"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_k0021"
                            android:text="@string/k0021" />

                        <TextView
                            android:id="@+id/q_k0021"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_k0021"
                            android:layout_alignBottom="@id/qtxt_k0021"
                            android:text="@string/Q_k0021" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/k0021"
                        style="@style/hradiogroup">

                        <RadioButton
                            android:id="@+id/k0021a"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/k0021a" />

                        <RadioButton
                            android:id="@+id/k0021b"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/k0021b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- k0022  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvk0022"
                style="@style/cardView"
                android:visibility='@{k0021a.checked ? View.VISIBLE : View.GONE}'>

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_k0022"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_k0022"
                            android:text="@string/k0022" />

                        <TextView
                            android:id="@+id/q_k0022"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_k0022"
                            android:layout_alignBottom="@id/qtxt_k0022"
                            android:text="@string/Q_k0022" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/k0022"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/k0022a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k0022a" />

                        <RadioButton
                            android:id="@+id/k0022b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k0022b" />

                        <RadioButton
                            android:id="@+id/k0022c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k0022c" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- k0023  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvk0023"
                style="@style/cardView"
                android:visibility='@{k0021a.checked ? View.VISIBLE : View.GONE}'>

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_k0023"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_k0023"
                            android:text="@string/k0023" />

                        <TextView
                            android:id="@+id/q_k0023"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_k0023"
                            android:layout_alignBottom="@id/qtxt_k0023"
                            android:text="@string/Q_k0023" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/k0023"
                        style="@style/hradiogroup">

                        <RadioButton
                            android:id="@+id/k0023a"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/k0023a" />

                        <RadioButton
                            android:id="@+id/k0023b"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/k0023b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- k0024  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvk0024"
                style="@style/cardView"
                android:visibility='@{k0021a.checked  || k0023a.checked ? View.VISIBLE : View.GONE}'>

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_k0024"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_k0024"
                            android:text="@string/k0024" />

                        <TextView
                            android:id="@+id/q_k0024"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_k0024"
                            android:layout_alignBottom="@id/qtxt_k0024"
                            android:text="@string/Q_k0024" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/k0024"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/k0024a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k0024a" />

                        <RadioButton
                            android:id="@+id/k0024b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k0024b" />

                        <RadioButton
                            android:id="@+id/k0024c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k0024c" />

                        <RadioButton
                            android:id="@+id/k0024d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k0024d" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>



            <!--EndButton LinearLayout-->
            <LinearLayout
                style="@style/hlinearlayout"
                android:layout_gravity="end"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/btnEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="End" />

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/btnNext"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />

            </LinearLayout>
            <!--EndButton LinearLayout-->


        </LinearLayout>

    </ScrollView>

</layout>