<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <import type="android.view.View" />
        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionC2Activity" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/GrpName"
            style="@style/vlinearlayout">


            <!-- c02  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc02"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/c02" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- c02a  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc02a"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_c02a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_c02a"
                            android:text="@string/c02a" />

                        <TextView
                            android:id="@+id/q_c02a"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_c02a"
                            android:layout_alignBottom="@id/qtxt_c02a"
                            android:text="@string/Q_c02a" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/c02a"
                        style="@style/EditTextAlphaNmeric"
                        android:maxLength="15"
                        android:hint="@string/name" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- c02b  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc02b"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_c02b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_c02b"
                            android:text="@string/c02b" />

                        <TextView
                            android:id="@+id/q_c02b"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_c02b"
                            android:layout_alignBottom="@id/qtxt_c02b"
                            android:text="@string/Q_c02b" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/c02b"
                        style="@style/hradiogroup">

                        <RadioButton
                            android:id="@+id/c02ba"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/c02ba" />

                        <RadioButton
                            android:id="@+id/c02bb"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/c02bb" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- c02c  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc02c"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_c02c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_c02c"
                            android:text="@string/c02c" />

                        <TextView
                            android:id="@+id/q_c02c"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_c02c"
                            android:layout_alignBottom="@id/qtxt_c02c"
                            android:text="@string/Q_c02c" />

                    </RelativeLayout>

                    <LinearLayout style="@style/hlinearlayout">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:text="@string/c02ca" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/c02ca"
                            style="@style/EditTextNum"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="##"
                            android:maxLength="2"
                            app:maxValue="11"
                            app:minValue="1"
                            app:type="range" />

                    </LinearLayout>

                    <LinearLayout style="@style/hlinearlayout">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:text="@string/c02cb" />

                        <com.edittextpicker.aliazaz.EditTextPicker
                            android:id="@+id/c02cb"
                            style="@style/EditTextNum"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:hint="##"
                            android:maxLength="2"
                            app:maxValue="10"
                            app:minValue="0"
                            app:type="range" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- c03  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc03"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_c03"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_c03"
                            android:text="@string/c03" />

                        <TextView
                            android:id="@+id/q_c03"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_c03"
                            android:layout_alignBottom="@id/qtxt_c03"
                            android:text="@string/Q_c03" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/c03"
                        style="@style/hradiogroup">

                        <RadioButton
                            android:id="@+id/c03a"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/c03a" />

                        <RadioButton
                            android:id="@+id/c03b"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/c03b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/fldGrpCVc0401"
                style="@style/vlinearlayout"
                android:visibility='@{c03b.checked ? View.GONE : View.VISIBLE}'>

                <!-- c04  Title   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVc04"
                    style="@style/cardView"
                    android:visibility='@{c03b.checked ? View.GONE : View.VISIBLE}'>

                    <LinearLayout style="@style/vlinearlayout">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_c04"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_c04"
                                android:text="@string/c04" />

                            <TextView
                                android:id="@+id/q_c04"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_c04"
                                android:layout_alignBottom="@id/qtxt_c04"
                                android:text="@string/Q_c04" />

                        </RelativeLayout>

                        <LinearLayout style="@style/hlinearlayout">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:text="Participant Name" />

                            <EditText
                                android:id="@+id/c04"
                                style="@style/EditTextAlpha"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="@string/name" />

                        </LinearLayout>

                        <LinearLayout style="@style/hlinearlayout">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:text="@string/c04a" />

                            <EditText
                                android:id="@+id/c04a"
                                style="@style/EditTextAlpha"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="@string/name" />

                        </LinearLayout>

                        <LinearLayout style="@style/vlinearlayout">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:layout_marginTop="12dp"
                                android:text="@string/c04b" />

                            <RadioGroup
                                android:id="@+id/c04b"
                                style="@style/hradiogroup">

                                <RadioButton
                                    android:id="@+id/c04ba"
                                    style="@style/radiobutton"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/c04ba" />

                                <RadioButton
                                    android:id="@+id/c04bb"
                                    style="@style/radiobutton"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/c04bb" />

                            </RadioGroup>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- c04c  Title   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVc04c"
                    style="@style/cardView">

                    <LinearLayout style="@style/vlinearlayout">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bottom">

                            <TextView
                                android:id="@+id/qtxt_c04c"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/q_c04c"
                                android:text="@string/c04c" />

                            <TextView
                                android:id="@+id/q_c04c"
                                style="@style/quesNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/qtxt_c04c"
                                android:layout_alignBottom="@id/qtxt_c04c"
                                android:text="@string/Q_c04c" />

                        </RelativeLayout>

                        <LinearLayout style="@style/hlinearlayout">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:text="@string/c04ca" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/c04ca"
                                style="@style/EditTextNum"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="@string/num"
                                android:maxLength="2"
                                app:maxValue="11"
                                app:minValue="1"
                                app:type="range" />

                        </LinearLayout>

                        <LinearLayout style="@style/hlinearlayout">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:text="@string/c04cb" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/c04cb"
                                style="@style/EditTextNum"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="@string/num"
                                android:maxLength="2"
                                app:maxValue="10"
                                app:minValue="0"
                                app:type="range" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>




            <!--EndButton LinearLayout-->
            <LinearLayout
                style="@style/hlinearlayout"
                android:layout_gravity="end"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/btnEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="End" />

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/btnNext"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />

            </LinearLayout>
            <!--EndButton LinearLayout-->


        </LinearLayout>

    </ScrollView>

</layout>