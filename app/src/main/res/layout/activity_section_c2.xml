<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionC2Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.sections.SectionC2Activity">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- c02  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c02" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- c02a  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc02a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c02a" />

                    <EditText
                        android:id="@+id/c02a"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/c02a" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- c02b  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc02b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c02b" />

                    <RadioGroup
                        android:id="@+id/c02b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/c02ba"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/c02ba" />

                        <RadioButton
                            android:id="@+id/c02bb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/c02bb" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- c02c  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc02c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c02c" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c02ca" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/c02ca"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/c02ca"
                        app:mask="##"
                        app:maxValue="11"
                        app:minValue="1"
                        app:type="range" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c02cb" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/c02cb"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/c02cb"
                        app:mask="##"
                        app:maxValue="10"
                        app:minValue="0"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- c03  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c03" />

                    <RadioGroup
                        android:id="@+id/c03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/c03a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/c03a" />

                        <RadioButton
                            android:id="@+id/c03b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/c03b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- c04  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c04" />

                    <EditText
                        android:id="@+id/c04"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/c04" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- c04a  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc04a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c04a" />

                    <EditText
                        android:id="@+id/c04a"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/c04a" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- c04b  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc04b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c04b" />

                    <RadioGroup
                        android:id="@+id/c04b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/c04ba"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/c04ba" />

                        <RadioButton
                            android:id="@+id/c04bb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/c04bb" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- c04c  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc04c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c04c" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c04ca" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/c04ca"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/c04ca"
                        app:mask="##"
                        app:maxValue="0"
                        app:minValue="0"
                        app:type="range" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c04cb" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/c04cb"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/c04cb"
                        app:mask="##"
                        app:maxValue="0"
                        app:minValue="0"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>