<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionH2Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".uen_hfa_ml.ui.sections.SectionH2Activity">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- h02  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h02" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0201  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0201"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0201" />

                    <RadioGroup
                        android:id="@+id/h0201"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0201a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0201a" />

                        <RadioButton
                            android:id="@+id/h0201b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0201b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0202  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0202"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0202" />

                    <RadioGroup
                        android:id="@+id/h0202"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0202a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0202a" />

                        <RadioButton
                            android:id="@+id/h0202b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0202b" />

                        <RadioButton
                            android:id="@+id/h0202c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0202c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0203  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0203"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0203" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0203a  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0203a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0203a" />

                    <RadioGroup
                        android:id="@+id/h0203a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0203aa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0203aa" />

                        <RadioButton
                            android:id="@+id/h0203ab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0203ab" />

                        <RadioButton
                            android:id="@+id/h0203ac"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0203ac" />

                        <RadioButton
                            android:id="@+id/h0203ad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0203ad" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0203b  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0203b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0203b" />

                    <RadioGroup
                        android:id="@+id/h0203b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0203ba"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0203ba" />

                        <RadioButton
                            android:id="@+id/h0203bb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0203bb" />

                        <RadioButton
                            android:id="@+id/h0203bc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0203bc" />

                        <RadioButton
                            android:id="@+id/h0203bd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0203bd" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!--EndButton LinearLayout-->
            <LinearLayout
                style="@style/hlinearlayout"
                android:layout_gravity="end"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/btnEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="End" />

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/btnNext"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />

            </LinearLayout>
            <!--EndButton LinearLayout-->


        </LinearLayout>

    </ScrollView>

</layout>