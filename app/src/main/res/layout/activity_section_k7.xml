                        <RadioButton
                            android:id="@+id/k0702bb"
                            style="@style/radiobutton"
                            android:checked="@{formsContract.k0702b.equals(formsContract.two)}"
                            android:text="@string/k0702bb" />

                        <RadioButton
                            android:id="@+id/k0702bc"
                            style="@style/radiobutton"
                            android:checked="@{formsContract.k0702b.equals(formsContract.three)}"
                            android:text="@string/k0702bc" />

                        <RadioButton
                            android:id="@+id/k0702c"
                            style="@style/radiobutton"
                            android:checked="@{formsContract.k0702b.equals(formsContract.four)}"
                            android:text="@string/k0702c" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--EndButton LinearLayout-->
            <LinearLayout
                style="@style/hlinearlayout"
                android:layout_gravity="end"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/btnEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="End" />

                <Button
                    android:id="@+id/btn_Continue"
                    style="@style/btnNext"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />

            </LinearLayout>
            <!--EndButton LinearLayout-->

        </LinearLayout>

    </ScrollView>

</layout>