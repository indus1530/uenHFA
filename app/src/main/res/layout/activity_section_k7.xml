                        style="@style/vradiogroup">

                        <RadioButton
                            android:id="@+id/k0701ba"
                            style="@style/radiobutton"
                            android:checked="@{formsContract.k0701b.equals(formsContract.one)}"
                            android:text="@string/k0701ba" />

                        <RadioButton
                            android:id="@+id/k0701bb"
                            style="@style/radiobutton"
                            android:checked="@{formsContract.k0701b.equals(formsContract.two)}"
                            android:text="@string/k0701bb" />

                        <RadioButton
                            android:id="@+id/k0701bc"
                            style="@style/radiobutton"
                            android:checked="@{formsContract.k0701b.equals(formsContract.three)}"
                            android:text="@string/k0701bc" />

                        <RadioButton
                            android:id="@+id/k0701c"
                            style="@style/radiobutton"
                            android:checked="@{formsContract.k0701b.equals(formsContract.four)}"
                            android:text="@string/k0701c" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- k0702  Title   -->
