<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="formsContract"
            type="edu.aku.hassannaqvi.uen_hfa_ml.contracts.FormsContract" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionK7Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.Myactivity">

        <LinearLayout
            android:id="@+id/GrpNameSectionK7"
            style="@style/vlinearlayout">

            <!-- k07  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk07"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/k07" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- k0701  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk0701"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/sub"
                        android:text="@string/k0701" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- k0701a  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk0701a"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_k0701a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_k0701a"
                            android:text="@string/k0701a" />

                        <TextView
                            android:id="@+id/q_k0701a"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_k0701a"
                            android:layout_alignBottom="@id/qtxt_k0701a"
                            android:text="@string/Q_k0701a" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/k0701a"
                        style="@style/vradiogroup">

                        <RadioButton
                            android:id="@+id/k0701aa"
                            style="@style/radiobutton"
                            android:checked="@{formsContract.k0701a.equals(formsContract.one)}"
                            android:text="@string/k0701aa" />

                        <RadioButton
                            android:id="@+id/k0701ab"
                            style="@style/radiobutton"
                            android:checked="@{formsContract.k0701a.equals(formsContract.two)}"
                            android:text="@string/k0701ab" />

                        <RadioButton
                            android:id="@+id/k0701ac"
                            style="@style/radiobutton"
                            android:checked="@{formsContract.k0701a.equals(formsContract.three)}"
                            android:text="@string/k0701ac" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- k0701b  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk0701b"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_k0701b"
                            android:layout_width="match_parent"
