<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionH4Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.sections.SectionH4Activity">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- h04  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h04" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0401  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0401"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0401" />

                    <RadioGroup
                        android:id="@+id/h0401"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0401a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0401a" />

                        <RadioButton
                            android:id="@+id/h0401b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0401b" />

                        <RadioButton
                            android:id="@+id/h0401c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0401c" />

                        <RadioButton
                            android:id="@+id/h0401d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0401d" />

                        <RadioButton
                            android:id="@+id/h0401x"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0401x" />

                        <EditText
                            android:id="@+id/h0401xx"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="12dp"
                            android:hint="@string/h0401x"
                            android:tag="h0401x"
                            android:text='@{h0401x.checked? h0401xx.getText().toString() : ""}'
                            android:visibility='@{h0401x.checked? View.VISIBLE : View.GONE}' />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>