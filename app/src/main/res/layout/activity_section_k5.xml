<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <!-- Databinding Edit Mode -->
        <variable
            name="formsContract"
            type="edu.aku.hassannaqvi.uen_hfa_ml.contracts.FormsContract" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionK5Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.Myactivity">

        <LinearLayout
            android:id="@+id/GrpNameSectionK5"
            style="@style/vlinearlayout">

            <!-- k05  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk05"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/k05" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- k0501  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVk0501"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_k0501"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_k0501"
                            android:text="@string/k0501" />

                        <TextView
                            android:id="@+id/q_k0501"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_k0501"
                            android:layout_alignBottom="@id/qtxt_k0501"
                            android:text="@string/Q_k0501" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/k0501"
                        style="@style/hradiogroup">

                        <RadioButton
                            android:id="@+id/k0501a"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:checked="@{formsContract.k0501.equals(formsContract.ONE)}"
                            android:text="@string/k0501a" />

                        <RadioButton
                            android:id="@+id/k0501b"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:checked="@{formsContract.k0501.equals(formsContract.TWO)}"
                            android:text="@string/k0501b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

