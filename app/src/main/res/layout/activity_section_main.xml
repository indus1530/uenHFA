<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.aku.ramshasaeed.mnch.activities.RsdMain">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.other.SectionMainActivity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<TextView
                style="@style/textViewCenterGravity"
                android:text="@string/routineone" />-->

            <Button
                android:id="@+id/form01"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/modbtitle"
                android:textSize="20dp" />

            <Button
                android:id="@+id/form02"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/modctitle"
                android:textSize="20dp" />

            <Button
                android:id="@+id/form03"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/moddtitle"
                android:textSize="20dp" />

            <Button
                android:id="@+id/form04"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/modetitle"
                android:textSize="20dp" />

            <Button
                android:id="@+id/form05"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/modftitle"
                android:textSize="20dp" />

            <Button
                android:id="@+id/form06"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/modgtitle"
                android:textSize="20dp" />


            <Button
                android:id="@+id/form07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/modhtitle"
                android:textSize="20dp" />


            <Button
                android:id="@+id/form08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/modititle"
                android:textSize="20dp" />


            <Button
                android:id="@+id/form09"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/modjtitle"
                android:textSize="20dp" />


            <LinearLayout
                android:id="@+id/fldGrpbtn"
                style="@style/hlinearlayout"
                android:paddingTop="32dp">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/btnEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Save Partially"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnNext"
                    style="@style/btnNext"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>