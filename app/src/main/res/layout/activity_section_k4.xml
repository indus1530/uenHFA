                        <RadioButton
                            android:id="@+id/k0401g"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/k0401g" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

