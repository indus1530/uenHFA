<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionD3Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.sections.SectionD3Activity">

        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- d03  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d03" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- d0301  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd0301"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d0301" />

                    <RadioGroup
                        android:id="@+id/d0301"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/d0301a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0301a" />

                        <RadioButton
                            android:id="@+id/d0301b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0301b" />

                        <RadioButton
                            android:id="@+id/d0301c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0301c" />

                        <RadioButton
                            android:id="@+id/d0301d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0301d" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- d0302  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd0302"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d0302" />

                    <RadioGroup
                        android:id="@+id/d0302"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/d0302a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0302a" />

                        <RadioButton
                            android:id="@+id/d0302b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0302b" />

                        <RadioButton
                            android:id="@+id/d0302c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0302c" />

                        <RadioButton
                            android:id="@+id/d0302d"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0302d" />

                        <RadioButton
                            android:id="@+id/d0302e"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0302e" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- d0303  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd0303"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d0303" />

                    <RadioGroup
                        android:id="@+id/d0303"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/d0303a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0303a" />

                        <RadioButton
                            android:id="@+id/d0303b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0303b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- d0304  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd0304"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d0304" />

                    <RadioGroup
                        android:id="@+id/d0304"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/d0304a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0304a" />

                        <RadioButton
                            android:id="@+id/d0304b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0304b" />

                        <RadioButton
                            android:id="@+id/d0304c"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/d0304c" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>