<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_hfa_ml.ui.sections.SectionH6Activity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarSize="10dip"
        tools:context=".ui.sections.SectionH6Activity">

        <LinearLayout
            android:id="@+id/GrpName"
            style="@style/vlinearlayout">

            <!-- h06  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh06"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h06" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0601  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0601"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0601" />

                    <RadioGroup
                        android:id="@+id/h0601"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0601a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0601a" />

                        <RadioButton
                            android:id="@+id/h0601b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0601b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0601aa  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0601aa"
                style="@style/cardView"
                android:visibility='@{h0601b.checked? View.GONE : View.VISIBLE}'>

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0601aa" />

                    <RadioGroup
                        android:id="@+id/h0601aa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0601aaa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0601aaa" />

                        <EditText
                            android:id="@+id/h0601aaax"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="12dp"
                            android:hint="@string/h0601aaa"
                            android:tag="h0601aaa"
                            android:text='@{h0601aaa.checked? h0601aaax.getText().toString() : ""}'
                            android:visibility='@{h0601aaa.checked? View.VISIBLE : View.GONE}' />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0602  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0602"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0602" />

                    <RadioGroup
                        android:id="@+id/h0602"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0602a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0602a" />

                        <RadioButton
                            android:id="@+id/h0602b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0602b" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0603  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0603"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0603" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0603a  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0603a"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0603a" />

                    <RadioGroup
                        android:id="@+id/h0603a"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0603aa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0603aa" />

                        <RadioButton
                            android:id="@+id/h0603ab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0603ab" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0603b  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0603b"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0603b" />

                    <RadioGroup
                        android:id="@+id/h0603b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0603ba"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0603ba" />

                        <RadioButton
                            android:id="@+id/h0603bb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0603bb" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h0603c  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh0603c"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h0603c" />

                    <RadioGroup
                        android:id="@+id/h0603c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/h0603ca"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0603ca" />

                        <RadioButton
                            android:id="@+id/h0603cb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/h0603cb" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>